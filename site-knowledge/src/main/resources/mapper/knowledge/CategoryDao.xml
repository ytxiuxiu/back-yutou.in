<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="in.yutou.site.knowledge.dao.CategoryDao">
  <resultMap id="basicResultMap" type="category">
    <id column="category_id" property="categoryId"/>
    <result column="name" property="name"/>
    <result column="link" property="link"/>
  </resultMap>
  
  <select id="getAllCategories" resultMap="basicResultMap">
    select <include refid="categoryColumns"></include>
    from kno_categories
  </select>
  
  <sql id="categoryColumns">
    category_id, name, link
  </sql>
</mapper>